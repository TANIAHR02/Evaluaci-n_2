# SchoolBot Agent - Variables de Entorno
# Configuración para EP2 - Ingeniería de Soluciones con IA

# =============================================================================
# CONFIGURACIÓN DE API
# =============================================================================

# OpenAI API Key (REQUERIDO)
OPENAI_API_KEY=your_openai_api_key_here

# Modelo de OpenAI a utilizar
OPENAI_MODEL=gpt-3.5-turbo

# Temperatura del modelo (0.0 - 1.0)
OPENAI_TEMPERATURE=0.3

# Máximo de tokens por respuesta
OPENAI_MAX_TOKENS=1000

# =============================================================================
# CONFIGURACIÓN DEL SISTEMA
# =============================================================================

# Entorno de ejecución (development, testing, production)
ENVIRONMENT=development

# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Puerto del servidor (si se usa API)
SERVER_PORT=8000

# Host del servidor
SERVER_HOST=0.0.0.0

# =============================================================================
# CONFIGURACIÓN DE MEMORIA
# =============================================================================

# Ruta de almacenamiento de memoria
MEMORY_PATH=data/memory

# Máximo de entradas en memoria de corto plazo
MAX_SHORT_TERM_MEMORY=100

# Máximo de entradas en memoria de largo plazo
MAX_LONG_TERM_MEMORY=1000

# Ruta del vector store para memoria semántica
VECTOR_STORE_PATH=data/memory/semantic_vectors

# Modelo de embeddings
EMBEDDINGS_MODEL=text-embedding-ada-002

# =============================================================================
# CONFIGURACIÓN DE PLANIFICACIÓN
# =============================================================================

# Máximo de pasos por plan
MAX_PLAN_STEPS=10

# Timeout por defecto para planes (segundos)
DEFAULT_PLAN_TIMEOUT=300

# Habilitar aprendizaje de estrategias
STRATEGY_LEARNING=true

# Habilitar planificación adaptativa
ADAPTIVE_PLANNING=true

# =============================================================================
# CONFIGURACIÓN DE HERRAMIENTAS
# =============================================================================

# Ruta de la base de datos vectorial
VECTOR_DB_PATH=data/vector_db

# Modelo de embeddings para búsqueda
SEARCH_EMBEDDINGS_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# Tamaño de chunks para documentos
CHUNK_SIZE=600

# Solapamiento entre chunks
CHUNK_OVERLAP=80

# Número máximo de resultados de búsqueda
MAX_SEARCH_RESULTS=10

# Umbral de similitud para resultados
SIMILARITY_THRESHOLD=0.7

# Habilitar reranking de resultados
ENABLE_RERANKING=true

# =============================================================================
# CONFIGURACIÓN DE SESIONES
# =============================================================================

# Máximo de sesiones simultáneas
MAX_SESSIONS=100

# Timeout de sesión (segundos)
SESSION_TIMEOUT=3600

# Intervalo de limpieza de sesiones (segundos)
CLEANUP_INTERVAL=300

# Máximo de historial de conversación por sesión
MAX_CONVERSATION_HISTORY=50

# =============================================================================
# CONFIGURACIÓN DE MONITOREO
# =============================================================================

# Habilitar métricas
METRICS_ENABLED=true

# Habilitar tracking de rendimiento
PERFORMANCE_TRACKING=true

# Habilitar reporte de errores
ERROR_REPORTING=true

# Ruta de logs
LOG_PATH=logs

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================

# Habilitar rate limiting
RATE_LIMITING=true

# Máximo de solicitudes por minuto
MAX_REQUESTS_PER_MINUTE=60

# Habilitar validación de entrada
INPUT_VALIDATION=true

# Habilitar filtrado de salida
OUTPUT_FILTERING=true

# Clave secreta para JWT (cambiar en producción)
SECRET_KEY=your-secret-key-here

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================

# URL de base de datos (SQLite por defecto)
DATABASE_URL=sqlite:///./schoolbot.db

# URL de Redis (opcional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================

# Habilitar modo debug
DEBUG=true

# Habilitar recarga automática
AUTO_RELOAD=true

# Habilitar logs detallados
VERBOSE_LOGGING=true

# =============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN
# =============================================================================

# Para producción, cambiar estos valores:

# ENVIRONMENT=production
# LOG_LEVEL=WARNING
# DEBUG=false
# AUTO_RELOAD=false
# VERBOSE_LOGGING=false
# RATE_LIMITING=true
# MAX_REQUESTS_PER_MINUTE=30
# SECRET_KEY=your-production-secret-key

# =============================================================================
# NOTAS DE CONFIGURACIÓN
# =============================================================================

# 1. Copiar este archivo como .env
# 2. Reemplazar 'your_openai_api_key_here' con tu API key real
# 3. Ajustar otros valores según necesidades
# 4. Para producción, usar valores más restrictivos
# 5. Nunca commitear archivos .env con claves reales
